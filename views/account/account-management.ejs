<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<div id="container-accountmanagement">
  <p>You're logged in</p>

  <% if (locals.accountData && locals.accountData.account_type === "Client") { %>
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>
    <h3><a href="/account/edit/<%= accountData.account_id %>">Update Account</a></h3>
  <% } %>

  <% if (locals.accountData && locals.accountData.account_type === "Employee" 
  || locals.accountData.account_type === "Admin") { %>
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>
    <h3><a href="/account/edit/<%= locals.accountData.account_id %>">Update Account</a></h3>
    <h3><a href="/inv">Vehicle Management</a></h3>
<% } %>
</div>